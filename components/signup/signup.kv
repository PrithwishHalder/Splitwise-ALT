<Signup>:
    name: "signup"

    MDBoxLayout:
        orientation: "vertical"
        padding: dp(20), dp(20)

        MDIconButton:
            icon: "theme-light-dark"  # Specify the icon name here
            size_hint: None, None
            size: "24dp", "24dp"
            pos_hint: {"center_x": 0.9}
            on_release: app.change_theme()

        AsyncImage:
            source: "assets/logo.png"
            size_hint: None, None
            size: "100dp", "100dp"
            halign: "center"
            pos_hint: {"center_x": 0.5}

        MDLabel:
            text: "Create your account"
            size_hint_x: 0.75
            size_hint_y: 0.1
            pos_hint: {"center_x": 0.5, "top": 1}
            theme_text_color: "Secondary"
            font_style: "H6"

        MDBoxLayout:
            orientation: "vertical"
            size_hint_x: 0.75
            pos_hint: {"center_x": 0.5}

            MDTextField:
                id: name
                icon_left: "account"
                hint_text: "Name"
                on_text: app.validate_input(self, self.text, "name")

            MDTextField:
                id: email
                icon_left: "email-outline"
                hint_text: "Email"
                on_text: app.validate_input(self, self.text, "email")

            MDTextField:
                id: password
                icon_left: "key-variant"
                hint_text: "Password"
                password: True
                on_text: app.validate_input(self, self.text, "password")

            MDTextField:
                id: cnf_password
                icon_left: "key-variant"
                hint_text: "Confirm Password"
                password: True
                on_text: app.validate_input(self, self.text, "cnf_password")

            MDBoxLayout:
                orientation: "horizontal"
                size_hint_y: 0.2
                height: dp(48)
                #padding: 0, dp(15), 0, 0

                MDCheckbox:
                    id: center_widget
                    size_hint: None, None
                    size: "48dp", "48dp"
                    color_inactive: "blue"
                    pos_hint: {"center_y": 0.5}
                    on_release: 
                        password.password = False if password.password is True else True

                MDBoxLayout:
                    orientation: "horizontal"
                    size_hint_y: 1
                    height: dp(48)

                    MDLabel:
                        text: "Show Password"
                        height: "48dp"

        MDBoxLayout:
            size_hint_x: 0.5
            orientation: "horizontal"
            size_hint_y: 0.3
            pos_hint: {"center_x": 0.5}

            EvenlySpacedMDBoxLayout:
                orientation: "horizontal"
                spacing: dp(50)
                height: 500
                #padding: dp(app.screen_width*0.25), 0, 0, 0

                MDFillRoundFlatIconButton:
                    text: "Sign Up"
                    icon: "account-plus"
                    text_color: "white"

                MDRoundFlatIconButton:
                    text: "Login"
                    icon: "login-variant"
                    text_color: "blue"
                    on_release: 
                        app.root.current = "login"
