<Profile>
    id: "profile"


    MDFloatLayout:

        AsyncImage:
            source: "assets/profile.jpg"
            size: '240dp', '240dp'
            pos_hint: {'y': 0, "center_x": 0.5}
            radius: 50

        MDNavigationDrawer:
            id: nav_drawer
            radius: (0, 16, 16, 0)

            MDNavigationDrawerMenu:

                MDNavigationDrawerHeader:
                    title: "Header title"
                    title_color: "#4a4939"
                    text: "Header text"
                    spacing: "4dp"
                    padding: "12dp", 0, 0, "56dp"

                MDNavigationDrawerLabel:
                    text: "Mail"

                DrawerClickableItem:
                    icon: "gmail"
                    right_text: "+99"
                    text_right_color: "#4a4939"
                    text: "Inbox"

                DrawerClickableItem:
                    icon: "send"
                    text: "Outbox"

                MDNavigationDrawerDivider:

                MDNavigationDrawerLabel:
                    text: "Labels"


        NavBar:
            size_hint_y: 0.1
            pos_hint: {"center_x": 0.5}
            elevation: 5
            md_bg_color: 1,1,1,1
            radius: [16]

            MDGridLayout:
                cols: 4
                size_hint_x: 0.9
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                spacing: app.screen_width*0.05
                MDIconButton:
                    id: 'home'
                    text: 'Home'
                    icon: 'home-outline'
                    badge_icon: ""
                    theme_text_color: "Custom"
                    text_color: 68, 115, 123, 1
                    on_release:
                        app.root.current = "home"

                MDIconButton:
                    id: 'account'
                    text: 'Account'
                    icon: 'book-account-outline'
                    badge_icon: ""
                    theme_text_color: "Custom"
                    text_color: 68, 115, 123, 1
                    on_release:
                        app.root.current = "account"

                MDIconButton:
                    id: 'analysis'
                    text: 'Analysis'
                    icon: 'chart-donut'
                    badge_icon: ""
                    theme_text_color: "Custom"
                    text_color: 68, 115, 123, 1
                    on_release:
                        app.root.current = "analysis"

                MDIconButton:
                    id: 'profile'
                    text: 'Profile'
                    icon: 'account-outline'
                    theme_text_color: "Custom"
                    text_color: 68, 115, 123, 1
                    on_release:
                        app.root.current = "profile"