<AppLoader>
    name: "apploader"

    MDBoxLayout:
        orientation: "vertical"
        padding: dp(20), dp(app.screen_height*0.25)
        spacing: 100

        AsyncImage:
            source: 'assets/logo.png'
            size_hint: None, None
            size: "180dp", "180dp"
            #halign: 'center'
            pos_hint: {'center_x': .5, 'top': 1}

        MDSpinner:
            size_hint: None, None
            size: dp(46), dp(46)
            pos_hint: {'center_x': .5, 'center_y': .5}
            active: True